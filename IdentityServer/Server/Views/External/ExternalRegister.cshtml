@model ExternalRegisterViewModel;
@{
    Layout = "../_Layout";
    ViewData["Title"] = "Registration";
}

<div class="external-register">
    <div class="external-register__header-holder">
        <h2>
            Продолжение регистрации
        </h2>
    </div>
    
    <form class="external-register__form" asp-controller="External" asp-action="ExternalRegister" method="post">
        <input type="hidden" asp-for="ReturnUrl"/>
        <p class="external-register__form__errors">
            @Model.Errors
        </p>
        <div class="external-register__form__input-label">
            Username
        </div>
        <div class="external-register__form__input-holder">
            <input asp-for="Username"/>
        </div>
        <div class="external-register__form__button-holder">
            <button type="submit">Sign Up</button>
        </div>
    </form>
</div>
